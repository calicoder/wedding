  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title Andy and Karina are getting married
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "keywords"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Copse|Six+Caps|Source+Sans+Pro:400,700", :rel => "stylesheet"}/
    / Mobile viewport optimized: h5bp.com/viewport
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    / favicon.ico and apple-touch-icon.png
    %link{:href => "favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon-57x57-iphone.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72-ipad.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114-iphone4.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-43109455-1', 'andyandkarina.com');
      ga('send', 'pageview');
    = csrf_meta_tags
  %body{:style => "background:url(/assets/bg/cake.jpg) fixed center top no-repeat", :class => body_class}
    .body_wrap
      .main_outer
        .main_top
        .main_mid
          / header
          .header
            .head_title
              %strong We’re Getting Married
              %p.sub_title
                SATURDAY, SEPTEMBER 7
                %sup th
                2013
            .head_names
              .head_name_left
                %span.head_name
                  %strong KARINA
                  %em TREGUB
              %span.head_amp
                = image_tag "head_amp.png", :height => "122", :width => "125"
              .head_name_right
                %span.head_name
                  %strong ANDY
                  %em SHIN
              %span.ribbon_left
              %span.ribbon_right
          .topmenu_line_top
          %nav#topmenu
            %ul.dropdown
              %li.menu-level-0
                = link_to "HOME", index_path

              %li.menu-level-0
                = link_to "WEDDING", wedding_path

              %li.menu-level-0
                = link_to "HOTELS", hotels_path

              %li.menu-level-0
                = link_to "BRUNCH", brunch_path

              %li.menu-level-0
                = link_to "OUR REGISTRY", registry_path
          .topmenu_line_bot
          .content.post-detail
            = yield
        .main_bot
      %footer
        .container
          %p.copyright
            Made with Love
            %span.icon_heart ♥
            Karina and Andy

